import bb.cascades 1.0

Page {
    content: Container {
        Container {
            SegmentedControl {
                id: tog
                Option {
                    id: feetoption
                    text: "Feet"
                    value: 1
                    onSelectedChanged: {
                        if (feetoption.selected == true) {
                            dd1.title = "measure (ft)";
                        } else {
                            dd1.title = "measure (m)";
                        }
                        var dropvalue = dd1.at(dd1.selectedIndex).value;
                        if (feetoption.selected == true) {
                            label1.text = "ft = " + dropvalue / 3.28084;
                        } else {
                            label1.text = "ft = " + dropvalue * 3.28084;
                        }
                    }
                    selected: true
                }
                Option {
                    id: meteroption
                    text: "Meters"
                    value: 3.28084
                    onSelectedChanged: {
                        if (feetoption.selected == true) {
                            dd1.title = "measure (ft)";
                        } else {
                            dd1.title = "measure (m)";
                        }
                        var dropvalue = dd1.at(dd1.selectedIndex).value;
                        if (feetoption.selected == true) {
                            label1.text = "ft = " + dropvalue / 3.28084;
                        } else {
                            label1.text = "ft = " + dropvalue * 3.28084;
                        }
                    }
                }
                onSelectedIndexChanged: {
                    var choosen1 = tog.selectedValue()
                    console.debug("Selected value: " + choosen1);
                }
                preferredWidth: 400.0
            }
            DropDown {
                id: dd1
                title: "measure (ft)"
                onSelectedIndexChanged: {
                    var dropvalue = dd1.at(dd1.selectedIndex).value;
                    label1.text = "ft = " + dropvalue;
                }
                Option {
                    text: "12"
                    value: {
                        if (feetoption.selected == true) 12; else 12 * 3.28084;
                    }
                }
                Option {
                    text: "15"
                    value: {
                        if (feetoption.selected == true) 15; else 15 * 3.28084;
                    }
                }
                Option {
                    text: "40"
                    value: {
                        if (feetoption.selected == true) 40; else 40 * 3.28084;
                    }
                }
                Option {
                    text: "50"
                    value: {
                        if (feetoption.selected == true) 50; else 50 * 3.28084;
                    }
                    
                }
            }
            Label {
                id: label1
                text: ""
            }
        }
    }
}
