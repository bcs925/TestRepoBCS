import bb.cascades 1.0

Page {
    Container {
        id: page1
        Label {
            text: "Feet?"
        }
        ToggleButton {
            id: tog
            onCheckedChanged: {
                var dropvalue = dd1.at(dd1.selectedIndex).value;
                if (checked == true) {
                    dd1.title = "measure (ft)";
                    label1.text = "ft = " + dropvalue / 3.28084;
                } else {
                    dd1.title = "measure (m)";
                    label1.text = "ft = " + dropvalue * 3.28084;
                }
            }
            checked: true
            enabled: true
        }
        DropDown {
            id: dd1
            title: "measure (ft)"
            onSelectedIndexChanged: {
                var dropvalue = dd1.at(dd1.selectedIndex).value;
                label1.text = "ft = " + dropvalue;
            }
            Option {
                text: "12"
                value: {
                    if (tog.checked == true) 12; else 12 * 3.28084;
                }
            }
            Option {
                text: "15"
                value: {
                    if (tog.checked == true) 15; else 15 * 3.28084;
                }
            }
            Option {
                text: "40"
                value: {
                    if (tog.checked == true) 40; else 40 * 3.28084;
                }
            }
            Option {
                text: "50"
                value: {
                    if (tog.checked == true) 50; else 50 * 3.28084;
                }
            }
        }
        Label {
            id: label1
            text: ""
        }
    }
}
